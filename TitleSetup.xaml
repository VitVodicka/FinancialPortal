<Window x:Class="FinancialPortal.TitleSetup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinancialPortal"
        mc:Ignorable="d"
        Title="TitleSetup" Height="350" Width="600" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Foreground="#76B041" Visibility="Hidden" FontFamily="Bebas Neue" Name="usertext" Grid.Column="0" Grid.Row="0" Text="✓ User setted up" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="25"></TextBlock>
        <TextBlock Foreground="#76B041" Visibility="Hidden" FontFamily="Bebas Neue" Name="accounttext" Grid.Column="1" Grid.Row="0" Text="✓ Account setted up" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="25"></TextBlock>
        <Button Grid.Column="1" FontFamily="Bebas Neue"   Grid.Row="0"  Width="180" Height="55" Content="Account Add" Name="accountAdd" FontSize="20" Click="AccountAdd_Click"></Button>
        <Button Grid.Column="0" FontFamily="Bebas Neue"   Grid.Row="0" Name="userAddButton"  Width="160" Height="50" Content="User Add" FontSize="20" Click="UserAdd_Click"></Button>
        <Button Grid.Column="0"  FontFamily="Bebas Neue" Grid.ColumnSpan="2" Grid.Row="1"  Width="160" Height="50" Content="Setup" FontSize="20" Click="Setup_Click"></Button>
    </Grid>
</Window>
